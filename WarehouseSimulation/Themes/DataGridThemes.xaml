            <DataTemplate x:Key="RowDetailsTemplate">
                <Border Margin="5"
                BorderThickness="1"
                BorderBrush="DeepPink">
                    <TextBlock Margin="5">
                <Run Text="Perfomance Rating:"/>
                <Run Text="{Binding Count}"/>
                
                <LineBreak />
                <Run Text="Status"/>
                <Run Text="{Binding Status}"/>


                    </TextBlock>
                </Border>
            </DataTemplate>
